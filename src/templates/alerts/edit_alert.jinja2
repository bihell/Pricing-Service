{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header mb-3">
        <h1>Edit Alert</h1>
    </div>
    <div class="form-size">
        <form method="post">
            <div class="form-group">
                <label for="name">Alert/Item Name</label>
                <input type="text" class="form-control" id="name" name="name" value="{{ alert.item.name }}" disabled>
            </div>
            <div class="form-group">
                <label for="url">Item URL</label>
                <input type="text" class="form-control" id="url" name="url" value="{{ alert.item.url }}" disabled>
            </div>
            <div class="form-group">
                <label for="price_limit">Alert limit</label>
                <input type="text" class="form-control" id="price_limit" name="price_limit" placeholder="45.0"
                       aria-describedby="priceLimitBlock" value="{{ alert.price_limit }}">
                <span id="priceLimitBlock" class="text-muted">We'll send you an e-mail when the price reaches or goes under this.</span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
{% endblock %}